                                                "Fn::GetAtt": [
                                                    "Peer1ELB",
                                                    "DNSName"
                                                ]
                                            },
                                            ",",
                                            {
                                                "Fn::GetAtt": [
                                                    "Peer2ELB",
                                                    "DNSName"
                                                ]
                                            },
                                            "\n",
                                            "ELK_ADDRESS=https://",
                                            {
                                                "Fn::GetAtt": [
                                                    "ElasticsearchDomain",
                                                    "DomainEndpoint"
